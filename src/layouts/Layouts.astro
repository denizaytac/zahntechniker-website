---
const { title } = Astro.props;
---

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style is:global>
      :root {
        --color-primary: #0066cc;
        --color-secondary: #f0f4f8;
        --color-accent: #ffa500;
        --color-text: #333333;
        --color-text-light: #666666;
      }
    </style>
  </head>
  <body class="font-sans">
    <header class="bg-white shadow-md">
      <nav class="container mx-auto px-4 py-6 flex justify-between items-center">
        <img src="/logo.jpg" alt="Stuckenholz Zahntechnik Logo" class="h-12">
        <ul class="flex space-x-6">
          <li><a href="/" class="text-gray-800 hover:text-blue-600">Startseite</a></li>
          <li><a href="/uber-uns" class="text-gray-800 hover:text-blue-600">Über uns</a></li>
          <li><a href="/kontakt" class="text-gray-800 hover:text-blue-600">Kontakt</a></li>
        </ul>
      </nav>
    </header>
    <slot />
    <footer class="bg-gray-800 text-white py-8">
      <div class="container mx-auto px-4">
        <div class="flex flex-wrap justify-between">
          <div class="w-full md:w-1/3 mb-6 md:mb-0">
            <h3 class="text-xl font-semibold mb-4">Kontakt</h3>
            <p>Stuckenholz Zahntechnik GmbH</p>
            <p>Unnaer Str. 86</p>
            <p>58636 Iserlohn</p>
            <p>Telefon: 02371/13435</p>
            <p>E-Mail: info@stuckenholz-zahntechnik.de</p>
          </div>
          <div class="w-full md:w-1/3 mb-6 md:mb-0">
            <h3 class="text-xl font-semibold mb-4">Öffnungszeiten</h3>
            <p>Montag - Freitag: 8:00 - 17:00 Uhr</p>
            <p>Samstag & Sonntag: Geschlossen</p>
          </div>
          <div class="w-full md:w-1/3">
            <h3 class="text-xl font-semibold mb-4">Links</h3>
            <ul>
              <li><a href="/impressum" class="hover:text-blue-400">Impressum</a></li>
              <li><a href="/datenschutz" class="hover:text-blue-400">Datenschutz</a></li>
            </ul>
          </div>
        </div>
        <div class="mt-8 text-center">
          <p>&copy; 2024 Stuckenholz Zahntechnik GmbH. Alle Rechte vorbehalten.</p>
        </div>
      </div>
    </footer>
  </body>
</html>